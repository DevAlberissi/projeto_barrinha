<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ic_vehicle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bus_right"
            app:tint="@color/azul_escuro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvNomeVeiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            tools:text="Kombi Escolar"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/azul_escuro"
            app:layout_constraintStart_toEndOf="@id/ic_vehicle"
            app:layout_constraintEnd_toStartOf="@id/btnEditar"
            app:layout_constraintTop_toTopOf="@id/ic_vehicle"
            app:layout_constraintBottom_toBottomOf="@id/ic_vehicle"/>

        <ImageButton
            android:id="@+id/btnExcluir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnEditar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:padding="8dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/btnExcluir"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPlacaVeiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:text="Placa: ABC-1234"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tvNomeVeiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ic_vehicle" />

        <TextView
            android:id="@+id/tvAnoCorVeiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Ano: 2010 | Cor: Branca"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvNomeVeiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvPlacaVeiculo" />

        <TextView
            android:id="@+id/tvAssentosVeiculo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Assentos: 15 lugares"
            android:textColor="@color/text_grey"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tvNomeVeiculo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAnoCorVeiculo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
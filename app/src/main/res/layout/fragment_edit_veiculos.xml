<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark_blue"
    tools:context=".ui.edit_veiculos">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvEditarVeiculoTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="Editar Veículo"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome do Veículo"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNomeVeiculoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Van Sprinter"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAnoVeiculoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: 2023"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="number"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placa"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPlacaVeiculoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: ABC-1234"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="textCapCharacters"
                android:maxLength="8"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cor"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etCorVeiculoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: Branco"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="text"
                android:layout_marginBottom="16dp"/>

            <TextView
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade de Assentos"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"/>
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAssentosVeiculoEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ex: 15"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_grey"
                android:background="@drawable/rounded_edittext_bg"
                android:padding="16dp"
                android:inputType="number"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/btn_salvar_edit_veiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALVAR ALTERAÇÕES"
                android:background="@drawable/rounded_button_bg"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="16dp"/>

        </LinearLayout>
    </ScrollView>
</FrameLayout>